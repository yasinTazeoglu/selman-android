    <TextView
        android:id="@+id/wordt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="turkce"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/wordK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:hint="turkcesi"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/late"
        app:layout_constraintEnd_toEndOf="@+id/late"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/soruI"
        android:layout_width="37dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toEndOf="@+id/wordK"
        app:layout_constraintTop_toTopOf="@+id/wordK"
        app:srcCompat="@drawable/soru" />

</android.support.constraint.ConstraintLayout>
